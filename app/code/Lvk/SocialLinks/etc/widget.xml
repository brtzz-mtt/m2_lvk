<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="lvk_sociallinks"
            class="Lvk\SocialLinks\Block\Frontend\Widget"
            placeholder_image="Lvk_Base::images/icon_32x32.png">
        <label>LVK SocialLinks</label>
        <description>LVK SocialLinks Widget</description>
        <parameters>
            <parameter name="link_aspect"
                       xsi:type="select"
                       required="true"
                       source_model="Lvk\SocialLinks\Model\Config\Source\AspectOptions">
                <label translate="true">Link aspect</label>
            </parameter>
            <parameter name="block_title"
                       xsi:type="text"
                       required="false">
                <label translate="true">Block title</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
